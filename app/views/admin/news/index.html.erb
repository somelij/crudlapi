<h1>Список новостей</h1>
<%= link_to 'Добавить новость', new_admin_news_path %>
<table>
  <thead>
    <tr>
      <th>Заголовок</th>
      <th>Скрыта</th>
      <th>Действия</th>
    </tr>
  </thead>
  <tbody>
    <% @news.each do |news_item| %>
      <tr>
        <td><%= news_item.title %></td>
        <td><%= news_item.hidden ? 'Да' : 'Нет' %></td>
        <td>
          <%= link_to 'Просмотреть', admin_news_path(news_item) %>
          <%= link_to 'Редактировать', edit_admin_news_path(news_item) %>
          <%= link_to 'Скрыть', admin_news_path(news_item), method: :delete, data: { confirm: 'Вы уверены?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>